<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href=""?>

<plugin>
    <name>rvMailerCustomDSN</name>
    <displayName>Custom DSN Mailer Plugin</displayName>
    <creationDate>2025-09-17</creationDate>
    <author>Revive Adserver</author>
    <authorEmail>revive@revive-adserver.com</authorEmail>
    <authorUrl>http://www.revive-adserver.com</authorUrl>
    <license>LICENSE.txt</license>
    <description>Plugin that allows sending emails using a custom Symfony Mailer DSN.</description>
    <version>1.0.3</version>
    <oxversion>6.0.0-beta-rc3</oxversion>
    <extends>mailer</extends>

    <install>

        <files>
            <file path="{MODULEPATH}mailer/rvMailerCustomDSN/">Mailer.class.php</file>
        </files>

        <configuration>
            <setting key="dsn" type="textarea" label="Custom DSN" required="1" size="64" visible="1"></setting>
        </configuration>

        <components>
            <component>
                <name>Mailer</name>
            </component>
        </components>

    </install>

</plugin>
