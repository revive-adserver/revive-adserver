<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href=""?>

<plugin>
    <name>rvMailerSendgrid</name>
    <displayName>Sendgrid Mailer Plugin</displayName>
    <creationDate>2025-09-17</creationDate>
    <author>Revive Adserver</author>
    <authorEmail>revive@revive-adserver.com</authorEmail>
    <authorUrl>http://www.revive-adserver.com</authorUrl>
    <license>LICENSE.txt</license>
    <description>Plugin that allows sending e-mails using Sendgrid.</description>
    <version>1.0.5</version>
    <oxversion>6.0.0-beta-rc3</oxversion>
    <extends>mailer</extends>

    <install>

        <files>
            <file path="{MODULEPATH}mailer/rvMailerSendgrid/">Mailer.class.php</file>
        </files>

        <configuration>
            <setting key="api" type="checkbox" label="Use HTTP API" required="1" visible="1">true</setting>
            <setting key="key" type="text" label="API Key" required="1" size="64" visible="1" />
        </configuration>

        <components>
            <component>
                <name>Mailer</name>
            </component>
        </components>

    </install>

</plugin>
