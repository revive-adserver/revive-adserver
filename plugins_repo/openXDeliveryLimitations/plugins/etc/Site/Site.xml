<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href=""?>

<plugin>
    <name>Site</name>
    <displayName>Site Delivery Rules Plugin</displayName>
    <creationDate>2025-08-20</creationDate>
    <author>Revive Adserver</author>
    <authorEmail>revive@revive-adserver.com</authorEmail>
    <authorUrl>http://www.revive-adserver.com</authorUrl>
    <license>LICENSE.txt</license>
    <description>Plugin that provides the ability to target delivery of ads by site.</description>
    <version>6.0.1</version>
    <oxversion>6.0.0-dev</oxversion>
    <extends>deliveryLimitations</extends>

    <install>
        <files>
            <file path="{ADMINPATH}/js/">updateList.js</file>
            <file path="{ADMINPATH}/lib/">updateList.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Channel.class.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Channel.delivery.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Hostnamelist.class.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Hostnamelist.delivery.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Pageurl.class.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Pageurl.delivery.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Referingpage.class.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Referingpage.delivery.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Registerabledomainlist.class.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Registerabledomainlist.delivery.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Source.class.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Source.delivery.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Variable.class.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Site/">Variable.delivery.php</file>

        </files>

        <components>
            <component><name>Channel</name></component>
            <component><name>Hostname</name></component>
            <component><name>Pageurl</name></component>
            <component><name>Referingpage</name></component>
            <component><name>Registerabledomainlist</name></component>
            <component><name>Source</name></component>
            <component><name>Variable</name></component>
        </components>
    </install>

</plugin>