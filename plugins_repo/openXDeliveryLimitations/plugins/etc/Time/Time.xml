<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href=""?>

<plugin>
    <name>Time</name>
    <displayName>Time Delivery Limitation Plugin</displayName>
    <creationDate>2014-04-08</creationDate>
    <author>Revive Adserver</author>
    <authorEmail>revive@revive-adserver.com</authorEmail>
    <authorUrl>http://www.revive-adserver.com</authorUrl>
    <license>GNU Gneral Public License v2</license>
    <description>Plugin that provides the ability to target delivery of ads by time.</description>
    <version>1.2.1</version>
    <oxversion>2.8.2-rc7</oxversion>
    <extends>deliveryLimitations</extends>

    <install>
        <files>
            <file path="{MODULEPATH}deliveryLimitations/Time/">AbstractTimePlugin.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Time/">Date.class.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Time/">Date.delivery.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Time/">Day.class.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Time/">Day.delivery.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Time/">Day.res.inc.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Time/">Hour.class.php</file>
            <file path="{MODULEPATH}deliveryLimitations/Time/">Hour.delivery.php</file>

            <file path="{GROUPPATH}/_lang/">en.mo</file>
            <file path="{GROUPPATH}/_lang/">zh_CN.mo</file>
            <file path="{GROUPPATH}/_lang/po/">en.po</file>
            <file path="{GROUPPATH}/_lang/po/">zh_CN.po</file>
        </files>

        <components>
            <component><name>Date</name></component>
            <component><name>Day</name></component>
            <component><name>Hour</name></component>
        </components>

    </install>

</plugin>
